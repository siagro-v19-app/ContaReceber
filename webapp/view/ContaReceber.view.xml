<mvc:View
	controllerName="br.com.idxtecContaReceber.controller.ContaReceber"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:t="sap.ui.table"
	height="100%"
	width="100%">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Contas a Receber">
							<t:Table id="tableContaReceber"
								rows="{
									path: '/ContaRecebers',
									parameters: {
										expand: 'CentroCustoDetails,
										TipoTituloDetails,
										ParceiroNegocioDetails,
										PlanoContaDetails'
									}
								}"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Interactive"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Contas"/> 
									</Toolbar> 
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Titulo" sortProperty="Titulo" width="150px">
										<Label text="Título"/>
										<t:template>
											<Text text="{Titulo}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="TipoTituloDetails/Descricao"
									sortProperty="TipoTituloDetails/Descricao" width="150px">
										<Label text="Tipo de título"/>
										<t:template>
											<Text text="{TipoTituloDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Valor" sortProperty="Valor" width="100px">
										<Label text="Valor"/>
										<t:template>
											<Text text="{path: 'Valor', 
												type: 'sap.ui.model.odata.type.Single',
			                            		formatOptions:{
			                            			decimals: 2,
			                                		decimalSeparator: ','
			                            		}}"
			                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Acrescimo" sortProperty="Acrescimo" width="100px">
										<Label text="Acréscimo"/>
										<t:template>
											<Text text="{path: 'Acrescimo',
												type: 'sap.ui.model.odata.type.Single',
				                            		formatOptions:{
				                            			decimals: 2,
				                                		decimalSeparator: ','
				                            		}}"
				                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Desconto" sortProperty="Desconto" width="100px">
										<Label text="Desconto"/>
										<t:template>
											<Text text="{path: 'Desconto',
												type: 'sap.ui.model.odata.type.Single',
				                            		formatOptions:{
				                            			decimals: 2,
				                                		decimalSeparator: ','
				                            		}}"
				                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Emissao" sortProperty="Emissao" width="100px">
										<Label text="Emissão"/>
										<t:template>
											<Text text="{
												path : 'Emissao',
												type : 'sap.ui.model.type.Date',
												formatOptions: {
													style : 'short'
												}}"
												wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Vencimento" sortProperty="Vencimento" width="100px">
										<Label text="Vencimento"/>
										<t:template>
											<Text text="{
												path : 'Vencimento',
												type : 'sap.ui.model.type.Date',
												formatOptions: {
													style : 'short'
												}}"
												wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Total" sortProperty="Total" width="100px">
										<Label text="Total"/>
										<t:template>
											<Text text="{path: 'Total',
												type: 'sap.ui.model.odata.type.Single',
				                            		formatOptions:{
				                            			decimals: 2,
				                                		decimalSeparator: ','
				                            		}}"
				                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Saldo" sortProperty="Saldo" width="100px">
										<Label text="Saldo"/>
										<t:template>
											<Text text="{path: 'Saldo',
												type: 'sap.ui.model.odata.type.Single',
				                            		formatOptions:{
				                            			decimals: 2,
				                                		decimalSeparator: ','
				                            		}}"
				                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="ParceiroNegocioDetails/RazaoSocial"
									sortProperty="ParceiroNegocioDetails/RazaoSocial" width="300px">
										<Label text="Parceiro de negócio"/>
										<t:template>
											<Text text="{ParceiroNegocioDetails/RazaoSocial}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="CentroCustoDetails/Descricao"
									sortProperty="CentroCustoDetails/Descricao" width="150px">
										<Label text="Centro de custo"/>
										<t:template>
											<Text text="{CentroCustoDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="PlanoContaDetails/Descricao"
									sortProperty="PlanoContaDetails/Descricao" width="150px">
										<Label text="Conta contábil"/>
										<t:template>
											<Text text="{PlanoContaDetails/Descricao}" wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Historico" sortProperty="Historico" width="250px">
										<Label text="Histórico"/>
										<t:template>
											<Text text="{Historico}" wrapping="false"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>